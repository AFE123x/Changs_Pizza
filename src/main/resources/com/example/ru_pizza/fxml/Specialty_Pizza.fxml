<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:controller="com.example.ru_pizza.SpecialityPizzaController" xmlns:fx="http://javafx.com/fxml" spacing="20" stylesheets="@stylesSpecial.css">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>
    <!-- Pizza Selection ComboBox -->
    <ComboBox fx:id="pizzaComboBox" promptText="Select Pizza Type" styleClass="pizza-combo-box"/>

    <!-- Pizza Image -->
    <ImageView fx:id="pizzaImageView" fitWidth="150" fitHeight="150" preserveRatio="true" styleClass="pizza-image-view"/>

    <!-- Size Selection -->
    <HBox spacing="20" styleClass="size-selection-box">
        <RadioButton fx:id="sizeSmall" text="Small" toggleGroup="$sizeToggleGroup" styleClass="size-radio-button"/>
        <RadioButton fx:id="sizeMedium" text="Medium" toggleGroup="$sizeToggleGroup" styleClass="size-radio-button"/>
        <RadioButton fx:id="sizeLarge" text="Large" toggleGroup="$sizeToggleGroup" styleClass="size-radio-button"/>
    </HBox>

    <!-- Toppings List -->
    <ListView fx:id="toppingsListView" prefHeight="150" styleClass="toppings-list-view"/>

    <!-- Extra Options -->
    <HBox spacing="20" styleClass="extra-options-box">
        <CheckBox fx:id="extraCheeseCheckBox" text="Extra Cheese" styleClass="extra-option-checkbox"/>
        <CheckBox fx:id="extraSauceCheckBox" text="Extra Sauce" styleClass="extra-option-checkbox"/>
        <CheckBox fx:id="sauceAlfredoCheckBox" text="Alfredo Sauce" styleClass="extra-option-checkbox"/>
        <CheckBox fx:id="sauceTomatoCheckBox" text="Tomato Sauce" styleClass="extra-option-checkbox"/>
    </HBox>

    <!-- Price Label and Buttons -->
    <HBox spacing="20" alignment="CENTER_RIGHT" styleClass="action-buttons-box">
        <Label fx:id="totalPriceLabel" text="Total Price: $0.00" styleClass="price-label"/>
        <Button fx:id="refreshButton" text="Refresh" styleClass="action-button"/>
        <Button fx:id="confirmButton" text="Confirm" styleClass="action-button"/>
    </HBox>
</VBox>
