<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ru_pizza.StoreOrderController">
    <children>
        <!-- Title Text -->
        <Text layoutX="250.0" layoutY="30.0" text="Store Orders" style="-fx-font-size: 20px;"/>

        <!-- ListView for Orders -->
        <ListView fx:id="storeOrderList" layoutX="50.0" layoutY="60.0" prefHeight="300.0" prefWidth="600.0"/>

        <!-- Order Details GridPane -->
        <GridPane layoutX="50.0" layoutY="370.0" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints minWidth="10.0" prefWidth="200.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0"/>
            </rowConstraints>

            <!-- Order ID and TextField -->
            <Text text="Order ID:"/>
            <TextField fx:id="orderIDField" GridPane.columnIndex="1"/>

            <!-- Action Buttons -->
            <Button fx:id="dispatchOrderButton" text="View Order" GridPane.rowIndex="1"/>
            <Button fx:id="cancelOrderButton" text="Cancel Order" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </GridPane>
    </children>
</AnchorPane>
